@using FriChat.Core.Models.AppUser
@model AppUserIndexPageViewModel
@{
    ViewData["Title"] = "Home page";
}
<link rel="stylesheet" href="~/css/index.css" />

<form method="get" action="/AppUser/Index">
    <input type="text" name="searchTerm" />
    <button type="submit">Search</button>
</form>

@if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
{
    <div>
        <h4>Search Results</h4>
        <ul>
            @foreach (var user in Model.SearchResults)
            {
                <li>
                    <div style="display: flex; align-items: center; gap: 0.75rem;">
                        <img src="@user.ProfilePictureUrl" alt="Profile" style="width:30px; height:30px; border-radius:50%; object-fit:cover;" />
                        <span style="
                                    display: inline-block;
                                    width: 9px;
                                    height: 9px;
                                    border-radius: 50%;
                                    background-color: @(user.IsOnline ? "#4caf50" : "#f44336");
                                "></span>
                        <div style="display: flex; align-items: center; gap: 0.5rem;">
                            <span style="font-weight: bold;">@user.UserName</span>
                            <span style="color: #bbb; font-size: 0.95em;">#@user.FirstName @user.LastName</span>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <form method="get" asp-page="/Index" style="display:inline;">
        <button type="submit" style="margin-left: 0.5rem;">Clear</button>
    </form>
}

<div class="chat-layout">
    <div class="friends-list">
        <h3>Friends</h3>
        <ul>
            @foreach (var friend in Model.FriendsList)
            {
                <li>
                    <div style="display: flex; align-items: center; gap: 0.75rem;">
                        <img src="@friend.FriendProfilePicturePath" alt="Profile" style="width:40px; height:40px; border-radius:50%; object-fit:cover;" />
                        <div>
                            <div style="font-weight: bold;">@friend.FriendUsername</div>
                            <div style="font-size: 0.9em; color: #bbb;">@friend.LastMessage</div>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="chat-window">
        <div class="chat-messages">
            <!-- Chat messages will go here -->
            <div><strong>User 1:</strong> Hello!</div>
            <div><strong>You:</strong> Hi there!</div>
        </div>
        <form class="chat-input">
            <input type="text" placeholder="Type your message..." />
            <button type="submit">Send</button>
        </form>
    </div>
</div>